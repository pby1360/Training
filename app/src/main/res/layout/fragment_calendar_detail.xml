<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@color/colorWhite">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="4"
		android:orientation="vertical"
		android:background="#3498DB">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/iv_calendar_back"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="2"
				android:src="@drawable/icon_back"
				android:paddingVertical="15dp"
				/>

			<TextView
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="6"
				android:text="Calendar detail"
				android:textSize="20sp"
				android:textColor="@color/colorWhite"
				android:gravity="center"/>

			<TextView
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="2"/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/iv_calendar_before"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="2"
				android:src="@drawable/icon_left_custom"
				android:paddingVertical="10dp"
				/>

			<TextView
				android:id="@+id/tv_calendar_month"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="6"
				/>

			<ImageView
				android:id="@+id/iv_calendar_after"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="2"
				android:src="@drawable/icon_right_custom"
				android:paddingVertical="10dp"
				/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1.7"
			android:orientation="horizontal">

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="0.8"
			android:orientation="horizontal">

			<TextView
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="2"/>

			<TextView
				android:id="@+id/tv_calendar_date"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="6"/>

			<TextView
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="2"/>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="6"
		android:orientation="horizontal">

	</LinearLayout>

</LinearLayout>

