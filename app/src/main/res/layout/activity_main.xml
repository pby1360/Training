<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#1277C7">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Support and manage your training!"
                android:textColor="@color/colorWhite"
                android:textSize="17sp"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="One More Training"
                android:textColor="@color/colorWhite"
                android:textSize="60sp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/icon_main_dumbbell"
                />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/icon_main_boxing"
                />
            <ImageView

                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/icon_main_swim"
                />

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="50dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/btn_home_timer"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/btn_circle_deepblue"
                    android:src="@drawable/icon_main_timer"
                    android:padding="15dp"
                    />
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    />
                <ImageView
                    android:id="@+id/btn_home_stopwatch"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/btn_circle_deepblue"
                    android:src="@drawable/icon_main_stopwatch"
                    android:padding="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="TIMER"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="STOPWATCH"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/btn_home_counter"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/btn_circle_deepblue"
                    android:src="@drawable/icon_main_counter"
                    android:padding="15dp"
                    />
                <ImageView
                    android:id="@+id/btn_home_calendar"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/btn_circle_deepblue"
                    android:src="@drawable/icon_main_calendar"
                    android:padding="20dp"
                    />
                <ImageView
                    android:id="@+id/btn_home_setting"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/btn_circle_deepblue"
                    android:src="@drawable/icon_main_setting"
                    android:padding="17dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="COUNTER"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="CALENDAR"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="SETTING"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>
